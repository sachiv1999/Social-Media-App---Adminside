<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:background="#E3F2FD"
    android:padding="0dp">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/custom_rectangle" />

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:src="@drawable/ic_menu"
    />


    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/socialmediaadmin"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_marginTop="16dp"
        android:padding="20dp"
        android:layout_alignParentTop="true" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:elevation="12dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Admin Profile"
                android:textColor="#00f"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:text="Manav Pandya"
                android:textColor="#00f"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="manavpandya42@gmail.com"
                android:textColor="#0000ff"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <GridLayout
        android:id="@+id/dashboardGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminTitle"
        android:layout_marginTop="82dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="40dp"
        android:useDefaultMargins="true">

        <!-- Reusable Card Template -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/custom_rectangle"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/i1"
                    android:layout_width="170dp"
                    android:layout_height="68dp"
                    android:background="@null"
                    android:contentDescription="@string/user"
                    android:src="@drawable/users" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/user_list"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Repeat similar CardView blocks for i2 to i6 -->
        <!-- You can change icons and IDs accordingly -->

        <!-- Example i2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/custom_rectangle"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/i2"
                    android:layout_width="170dp"
                    android:layout_height="68dp"
                    android:background="@null"
                    android:contentDescription="@string/post"
                    android:src="@drawable/posts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/post_list"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- i3 - Friend List -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/custom_rectangle"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/i3"
                    android:layout_width="170dp"
                    android:layout_height="68dp"
                    android:background="@null"
                    android:contentDescription="@string/friendlist"
                    android:src="@drawable/friendlist" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/friend_list"
                    android:textSize="20sp"
                    android:textColor="#fff" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- i4 - Followers -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/custom_rectangle"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/i4"
                    android:layout_width="170dp"
                    android:layout_height="68dp"
                    android:background="@null"
                    android:contentDescription="@string/fowller"
                    android:src="@drawable/flower" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/friends"
                    android:textSize="20sp"
                    android:textColor="#fff" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- i5 - Ads -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/custom_rectangle"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/i5"
                    android:layout_width="170dp"
                    android:layout_height="68dp"
                    android:background="@null"
                    android:contentDescription="@string/adds"
                    android:src="@drawable/adds" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/adds_list"
                    android:textSize="20sp"
                    android:textColor="#fff" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- i6 - Subscriptions -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/custom_rectangle"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/i6"
                    android:layout_width="170dp"
                    android:layout_height="68dp"
                    android:background="@null"
                    android:contentDescription="@string/Sub"
                    android:src="@drawable/chat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="chat list"
                    android:textSize="20sp"
                    android:textColor="#fff" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </GridLayout>

</RelativeLayout>
