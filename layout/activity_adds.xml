<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">


    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#E3F2FD"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/adminTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advertisements"
            android:textColor="#0000ff"
            android:textSize="34sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:paddingBottom="30dp"
            android:layout_alignParentTop="true" />

        <EditText android:id="@+id/name"
            android:autofillHints=""
            android:hint="@string/advertiser_name"
            android:textColorHint="#00f"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/companyName"
            android:autofillHints=""
            android:hint="@string/company_name"
            android:textColorHint="#00f"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText android:id="@+id/companyAddress"
            android:hint="Company Address"
            android:textColorHint="#00f"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/adName"
            android:hint="@string/ad_name"
            android:textColorHint="#00f"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button android:id="@+id/uploadBtn"
            android:text="Submit Ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0000ff"
            android:padding="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="10dp" />




    </LinearLayout>


</ScrollView>
